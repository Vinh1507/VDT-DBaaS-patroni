# docker compose file for running a 3-node PostgreSQL cluster
# with 3-node etcd cluster as the DCS and one haproxy node
#
# requires a patroni image build from the Dockerfile:
# $ docker build -t patroni .
# The cluster could be started as:
# $ docker-compose up -d
# You can read more about it in the:
# https://github.com/patroni/patroni/blob/master/docker/README.md
version: "2"


services:
    {{ hostvars[inventory_hostname]['name'] }}:
        image: {{ PATRONI_CLUSTER_IMAGE }}
        env_file: docker/patroni.env
        hostname: {{ hostvars[inventory_hostname]['name'] }}
        container_name: demo-{{ hostvars[inventory_hostname]['name'] }}
        ports:
            - 5432:5432
            - 8008:8008
        volumes:
            - /patroni_docker/patroni.yml:/home/postgres/patroni.yml
            - /patroni_docker/pgbackrest.conf:/etc/pgbackrest.conf
            - /patroni_docker/custom_bootstrap.sh:/etc/custom_bootstrap.sh
            - pgbackrest_data:/var/lib/pgbackrest
        environment: &haproxy_env
            ETCDCTL_ENDPOINTS: http://192.168.144.146:2379
            PATRONI_ETCD3_HOSTS: "'192.168.144.146:2379'"
            PATRONI_SCOPE: demo27_recover_3
            PATRONI_NAME: {{ hostvars[inventory_hostname]['name'] }}

volumes:
    pgbackrest_data: